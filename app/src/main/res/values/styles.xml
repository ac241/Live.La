<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="AddAnchorFragmentStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
    </style>

    <style name="item_list_overlay_text">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_weight">1</item>
        <!--<item name="android:singleLine">wrap_content</item>-->
    </style>

    <style name="overlay_alpha">
        <item name="android:alpha">0.7</item>
    </style>

    <style name="Theme.Acel" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>
    </style>

    <style name="Theme.Acel.NoActionBar" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>
    </style>

    <style name="Theme.Fade.InOut.NoActionBar" parent="@style/Theme.Acel.NoActionBar">
        <item name="android:windowAnimationStyle">@style/activity_fade</item>
    </style>

    <style name="activity_fade" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="toolbar_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="player_overlay_button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:alpha">0.6</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="round_black_background_alpha06_white_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.6</item>
        <item name="android:background">@drawable/text_view_radius_background</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@android:color/black</item>
    </style>

    <style name="popup_menu_style_black_alpha">
        <item name="android:popupBackground">@color/alphaBlack</item>
    </style>
</resources>
