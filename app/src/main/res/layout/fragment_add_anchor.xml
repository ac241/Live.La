<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.main.AddAnchorFragment">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_anchor"
            android:textSize="25sp" />

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_anchor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/edit_anchor_id_add_anchor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:hint="@string/anchor_id"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:importantForAutofill="no" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.acel.streamlivetool.ui.MyRadioGroup
            android:id="@+id/radio_group_add_anchor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    <Button
            android:id="@+id/btn_confirm_add_anchor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm" />
</LinearLayout>