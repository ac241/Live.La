<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cookie_anchor.AnchorsFragment"
    android:orientation="vertical">

    <ViewStub
        android:id="@+id/viewStub_login_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/login_first_wrapper"
        android:layout="@layout/layout_login_first" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/cookie_anchor_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cookie_anchor_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>